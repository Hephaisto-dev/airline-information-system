<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SearchRouteController">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10" padding="20">
            <Label text="Departure Airport:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="departureField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Destination Airport:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="destinationField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button text="Search" onAction="#searchButtonClicked" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TableView fx:id="routesTable" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3">
                <columns>
                    <TableColumn text="Route ID" prefWidth="100" >
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Departure Airport" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="departureAirport" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Destination Airport" prefWidth="150">
                        <cellValueFactory>
                            <PropertyValueFactory property="destinationAirport" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </GridPane>
    </children>
</AnchorPane>
