<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="gui.CreateFlightController"
            prefHeight="400.0" prefWidth="600.0">
    <Label maxWidth="Infinity" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" alignment="CENTER"
           text="Create Flight" prefWidth="100" prefHeight="100" layoutY="-10"
           style="-fx-font-size: 15; -fx-font-weight: bold"/>
    <Label layoutX="58.0" layoutY="68.0" text="Departure place"/>
    <Label layoutX="58.0" layoutY="106.0" text="Arrival Place"/>
    <Label layoutX="58.0" layoutY="147.0" text="Departure local date time: (yyyy-mm-ddThh:mm:ss)"/>
    <Label layoutX="58.0" layoutY="187.0" text="Arrival local date time: (yyyy-mm-ddThh:mm:ss)"/>
    <Label layoutX="58.0" layoutY="227.0" text="Airplane name"/>
    <TextField fx:id="departurePlace" layoutX="340.0" layoutY="64.0"/>
    <TextField fx:id="arrivalPlace" layoutX="340.0" layoutY="102.0"/>
    <TextField fx:id="deparureLocalDateTime" layoutX="340.0" layoutY="143.0"/>
    <TextField fx:id="arrivalLocalDateTime" layoutX="340.0" layoutY="183.0"/>
    <TextField fx:id="airplaneName" layoutX="340.0" layoutY="223.0" onAction="#createFlight"/>
    <TextFlow textAlignment="CENTER" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" layoutY="260.0">
        <Button fx:id="createButton" mnemonicParsing="false" onAction="#createFlight" text="Create Flight"/>
    </TextFlow>
    <Label fx:id="result" layoutX="58.0" layoutY="300.0" prefHeight="69.0" prefWidth="515.0" text="Result"
           wrapText="true"/>
</AnchorPane>
